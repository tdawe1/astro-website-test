---
import Layout from '../../../layouts/Layout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import { subscriptionTools } from '../../../data/subscriptionTools.js';

export async function getStaticPaths() {
  return subscriptionTools.map((tool) => ({
    params: { slug: tool.slug },
    props: { tool }
  }));
}

const { tool } = Astro.props;
---

<Layout title={`${tool.name} - Kyros`} description={`Placeholder detail page for ${tool.name} subscription toolkit.`}>
  <Navigation />

  <main class="tool-detail">
    <section class="hero">
      <div class="section-container">
        <div class="hero-copy">
          <p class="eyebrow">Subscription toolkit</p>
          <h1>{tool.name}</h1>
          <p class="lead">{tool.headline}</p>
          <p class="summary">{tool.summary}</p>
          <div class="hero-actions">
            <a class="cta-primary" href="/discovery">Discuss this toolkit</a>
            <a class="cta-secondary" href="/services/subscriptions">Back to all toolkits</a>
          </div>
        </div>
        <aside class="hero-aside">
          <div class="persona-card">
            <h2>Who it serves</h2>
            <p>{tool.persona}</p>
            {import.meta.env.DEV && (
              <p class="note">Replace with ICP bullets, team size ranges, or maturity markers.</p>
            )}
          </div>
        </aside>
      </div>
    </section>

    <section class="why-now">
      <div class="section-container">
        <div class="grid">
          <div>
            <h2>Signals it solves</h2>
            <ul>
              {tool.painPoints.map((pain) => (
                <li>{pain}</li>
              ))}
            </ul>
          </div>
          <div>
            <h2>What teams get</h2>
            <ul>
              {tool.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="outcomes">
      <div class="section-container">
        <header>
          <h2>Outcomes to expect</h2>
          {import.meta.env.DEV && (
            <p>Swap this copy for proof points—numbers, quotes, or screenshots once available.</p>
          )}
        </header>
        <div class="outcomes-grid">
          {tool.outcomes.map((outcome) => (
            <article class="outcome">
              <p>{outcome}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="cadence">
      <div class="section-container">
        <div class="cadence-card">
          <h2>Proposed delivery cadence</h2>
          {import.meta.env.DEV && (
            <p class="placeholder">Outline onboarding timeline, standing touchpoints, and who owns what once you finalise the packaging. The structure below is a suggestion you can overwrite.</p>
          )}
          <div class="cadence-grid">
            <div>
              <h3>Onboarding</h3>
              <p>Week 1 setup session, stack access, success metric alignment.</p>
            </div>
            <div>
              <h3>Rhythm</h3>
              <p>Weekly async updates + monthly working session to adjust scope.</p>
            </div>
            <div>
              <h3>Support</h3>
              <p>Shared incident channel, 24-hour response SLA, quarterly roadmap refresh.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pricing">
      <div class="section-container">
        <div class="pricing-card">
          <h2>Pricing placeholder</h2>
          <p>{tool.pricingNote}</p>
          {import.meta.env.DEV && (
            <p class="placeholder">Insert tier names, add-ons, and guarantees once commercial decisions are locked. Consider echoing Buffer-style tables here.</p>
          )}
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="section-container">
        <div class="cta-card">
          <div>
            <h2>Want a walkthrough?</h2>
            <p>Share your current stack and bottlenecks. We will tailor a live demo and note where this toolkit slots in.</p>
          </div>
          <a class="cta-primary" href="/discovery">Book a call</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .hero {
    background: #ffffff;
  }

  .hero .section-container {
    display: grid;
    grid-template-columns: minmax(0, 2fr) minmax(0, 1fr);
    gap: 3rem;
    align-items: start;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.85rem;
    color: #2563eb;
    margin-bottom: 0.75rem;
  }

  .lead {
    font-size: 1.2rem;
    color: #102a43;
  }

  .summary {
    color: #1f2937;
    margin-bottom: 1.5rem;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .cta-primary,
  .cta-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.9rem 1.75rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .cta-primary {
    background: linear-gradient(120deg, #033463, #0d6efd);
    color: white;
  }

  .cta-secondary {
    border: 2px solid rgba(3, 52, 99, 0.2);
    color: #033463;
  }

  .cta-primary:hover,
  .cta-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 18px 38px rgba(3, 52, 99, 0.16);
  }

  .persona-card {
    background: var(--bg-light);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 26px 65px rgba(3, 52, 99, 0.08);
  }

  .persona-card .note {
    font-size: 0.9rem;
    color: #4b5563;
  }

  .why-now {
    background: #f5f7fb;
  }

  .why-now .grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 2rem;
  }

  .why-now ul {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 0.85rem;
  }

  .why-now li {
    position: relative;
    padding-left: 1.6rem;
    color: #1f2937;
  }

  .why-now li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: #2563eb;
  }

  .outcomes {
    background: #ffffff;
  }

  .outcomes header {
    max-width: 55ch;
    margin-bottom: 2.5rem;
  }

  .outcomes-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;
  }

  .outcome {
    background: var(--bg-light);
    border-radius: 18px;
    padding: 1.75rem;
    border: 1px solid rgba(3, 52, 99, 0.08);
  }

  .cadence {
    background: #0b1f33;
    color: #dbeafe;
  }

  .cadence-card {
    border-radius: 24px;
    padding: 3rem;
    display: grid;
    gap: 2rem;
  }

  .cadence-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;
  }

  .cadence-grid h3 {
    color: #ffffff;
  }

  .placeholder {
    color: rgba(219, 234, 254, 0.75);
  }

  .pricing {
    background: #ffffff;
  }

  .pricing-card {
    background: var(--bg-light);
    border-radius: 22px;
    padding: 2.5rem;
    border: 1px dashed rgba(3, 52, 99, 0.25);
    text-align: center;
    display: grid;
    gap: 1rem;
  }

  .cta {
    background: #f5f7fb;
  }

  .cta-card {
    background: #ffffff;
    border-radius: 24px;
    padding: 3rem;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 24px 55px rgba(3, 52, 99, 0.12);
  }

  @media (max-width: 1200px) {
    .hero .section-container,
    .why-now .grid,
    .outcomes-grid,
    .cadence-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .cadence-card,
    .cta-card {
      padding: 2.25rem;
    }
  }
</style>
