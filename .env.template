# Kyros Website Environment Configuration Template
# Copy this file to .env for local development
# Copy this file to .env.production for production deployment
#
# IMPORTANT: Never commit actual values to version control
# See SECURITY.md for best practices on API keys and tokens

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application URL (used for absolute URLs in emails, webhooks, etc.)
APP_URL=http://localhost:4321

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================

# Database path (relative to project root)
# Default: data/contacts.db
DATABASE_PATH=data/contacts.db

# Database backup configuration (optional)
DATABASE_BACKUP_ENABLED=false
DATABASE_BACKUP_INTERVAL_HOURS=24

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# Email service provider (sendgrid, mailgun, resend, etc.)
EMAIL_PROVIDER=

# SendGrid Configuration
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=hello@kyros.solutions
SENDGRID_FROM_NAME=Kyros

# Mailgun Configuration  
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM_EMAIL=hello@kyros.solutions

# Resend Configuration
RESEND_API_KEY=
RESEND_FROM_EMAIL=hello@kyros.solutions

# Email notification recipients
EMAIL_NOTIFICATION_TO=hello@kyros.solutions
EMAIL_NOTIFICATION_CC=

# =============================================================================
# FORM SERVICES CONFIGURATION
# =============================================================================

# Formspree endpoint for discovery form
# Currently: https://formspree.io/f/xrbaloye
FORMSPREE_ENDPOINT=

# Form validation and rate limiting
FORM_RATE_LIMIT_ENABLED=true
FORM_RATE_LIMIT_MAX_REQUESTS=5
FORM_RATE_LIMIT_WINDOW_MINUTES=15

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MINUTES=15

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:4321,https://kyros.solutions

# Session security (if implementing admin features)
SESSION_SECRET=
SESSION_TIMEOUT_HOURS=24

# =============================================================================
# AI/AUTOMATION AGENT CONFIGURATION
# =============================================================================

# GitHub integration for repository-level agents
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

# AI service API keys (for workflow discovery and automation agents)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# Agent configuration
AGENT_WEBHOOK_URL=
AGENT_SECRET_KEY=
AGENT_RATE_LIMIT_MAX_REQUESTS=50
AGENT_RATE_LIMIT_WINDOW_MINUTES=60

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
GA_TRACKING_ID=

# Sentry error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Application monitoring
LOG_LEVEL=info
LOG_FORMAT=json

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TOKEN=

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# CRM integrations (for future use)
HUBSPOT_API_KEY=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# Calendar integration (for booking system)
CALENDLY_API_KEY=
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=

# Payment processing (for future subscription features)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build configuration
BUILD_ENVIRONMENT=development
BUILD_OUTPUT_DIR=dist

# CDN configuration
CDN_URL=
CDN_CACHE_CONTROL=public, max-age=31536000

# SSL/TLS configuration
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable development features
DEV_MODE=true
DEV_API_LOGGING=true
DEV_PRETTY_ERRORS=true

# Local development ports
DEV_PORT=4321
DEV_HOST=localhost

# Testing configuration
TEST_DATABASE_PATH=test/test.db
TEST_EMAIL_MODE=console