---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { caseStudies } from '../../data/caseStudies.js';
---

<Layout title="Case Studies - Kyros" description="Placeholder library of Kyros case studies.">
  <Navigation />

  <main class="case-studies-page">
    <section class="hero">
      <div class="section-container">
        <h1>Case studies</h1>
        <p class="lead">Real engagements that show how Kyros tackles automation, reporting, and process bottlenecks. Replace the copy, metrics, and CTAs with approved material when ready.</p>
      </div>
    </section>

    <section class="listing">
      <div class="section-container">
        <div class="cards">
          {caseStudies.map((study) => (
            <article class="card">
              <header>
                <div class="icon">{study.icon}</div>
                <div>
                  <h2>{study.name}</h2>
                  <p class="sector">{study.sector}</p>
                </div>
              </header>
              <p class="challenge">{study.challenge}</p>
              <ul>
                {study.outcomes.slice(0, 2).map((outcome) => (
                  <li>{outcome}</li>
                ))}
              </ul>
              <a class="cta-link" href={`/case-studies/${study.slug}`}>Read the project summary</a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .hero {
    background: #ffffff;
  }

  .lead {
    font-size: 1.2rem;
    color: #1f2937;
    max-width: 60ch;
  }

  .listing {
    background: #f5f7fb;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 2rem;
  }

  .card {
    background: #ffffff;
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 28px 70px rgba(3, 52, 99, 0.12);
    display: grid;
    gap: 1.25rem;
  }

  .card header {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .icon {
    font-size: 2rem;
    width: 3.25rem;
    height: 3.25rem;
    background: linear-gradient(135deg, #007bff, #0056b3);
    border-radius: 50%;
    display: grid;
    place-items: center;
    color: #ffffff;
  }

  .sector {
    color: #4b5563;
    font-size: 0.95rem;
  }

  .challenge {
    color: #1f2937;
  }

  ul {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 0.75rem;
  }

  li {
    position: relative;
    padding-left: 1.6rem;
  }

  li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: #2563eb;
  }

  .cta-link {
    color: #0d6efd;
    font-weight: 600;
    text-decoration: none;
  }

  .cta-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 1180px) {
    .cards {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 768px) {
    .cards {
      grid-template-columns: 1fr;
    }

    .card {
      padding: 2rem;
    }
  }
</style>
