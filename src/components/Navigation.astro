---
// Shared Navigation component for consistent navigation across all pages
---

<nav class="main-nav">
  <div class="nav-container">
    <a class="logo" href="/">
      <img src="/logo.png" alt="kyros - Automation without the bloat" class="logo-image" />
    </a>

    <button class="nav-toggle" type="button" aria-label="Toggle menu" aria-expanded="false">
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
    </button>

    <ul class="nav-links" id="primary-navigation" data-open="false">
      <li><a href="/why-kyros">Why Kyros?</a></li>
      <li><a href="/services">Services</a></li>
      <li><a href="/services/agile-sprint">Agile Sprint</a></li>
      <li><a href="/case-studies">Case Studies</a></li>
      <li><a href="/prd-spec">PRD Spec</a></li>
      <li><a href="/discovery">Discovery</a></li>
      <li><a href="/demo" class="nav-demo">Demo</a></li>
      <li><a href="/portal" class="nav-login">Log In</a></li>
      <li><a href="/discovery" class="nav-cta">Book A Call</a></li>
    </ul>
  </div>
</nav>

<style>
  .main-nav {
    position: sticky;
    top: 0;
    z-index: 20;
    background: rgba(255, 255, 255, 0.96);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(3, 52, 99, 0.08);
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: min(100%, 1280px);
    padding: 0.9rem 2rem;
    margin: 0 auto;
    gap: 1rem;
  }

  .logo {
    display: inline-flex;
    align-items: center;
  }

  .logo-image {
    height: 72px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .logo-image:hover {
    transform: scale(1.03);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-links a {
    text-decoration: none;
    color: #033463;
    font-weight: 500;
    font-size: 1rem;
    transition: color 0.2s ease, transform 0.2s ease;
    padding: 0.35rem 0;
  }

  .nav-links a:hover {
    color: var(--accent-blue);
    transform: translateY(-2px);
  }

  .nav-demo {
    color: var(--accent-blue);
    font-weight: 600;
  }

  .nav-login {
    color: var(--accent-blue);
    border: 1.5px solid var(--accent-blue);
    padding: 0.5rem 1.1rem !important;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .nav-login:hover {
    background: var(--accent-blue);
    color: #ffffff;
  }

  .nav-cta {
    background: linear-gradient(120deg, var(--accent-blue), var(--electric-blue-dark));
    color: #ffffff !important;
    padding: 0.55rem 1.4rem !important;
    border-radius: 10px;
    font-weight: 600;
    box-shadow: 0 12px 25px rgba(0, 123, 255, 0.25);
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    width: 42px;
    height: 42px;
    border-radius: 12px;
    border: 1px solid rgba(3, 52, 99, 0.1);
    background: rgba(255, 255, 255, 0.9);
    cursor: pointer;
  }

  .nav-toggle-bar {
    width: 20px;
    height: 2px;
    background: #033463;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  @media (max-width: 960px) {
    .nav-container {
      padding: 0.85rem 1.25rem;
      flex-wrap: wrap;
    }

    .logo-image {
      height: 60px;
      max-width: 170px;
    }

    .nav-toggle {
      display: inline-flex;
    }

    .nav-links {
      width: 100%;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      margin-top: 0.75rem;
      padding: 1rem 1.25rem;
      background: rgba(255, 255, 255, 0.98);
      border-radius: 16px;
      border: 1px solid rgba(3, 52, 99, 0.08);
      box-shadow: 0 18px 30px rgba(3, 52, 99, 0.08);
      display: none;
    }

    .nav-links[data-open="true"] {
      display: flex;
    }

    .nav-links a {
      font-size: 0.95rem;
      width: 100%;
      padding: 0.4rem 0;
    }

    .nav-demo,
    .nav-login,
    .nav-cta {
      width: 100%;
      text-align: center;
    }

    .nav-login {
      padding: 0.6rem 1rem !important;
    }

    .nav-cta {
      padding: 0.65rem 1rem !important;
    }
  }
</style>

<script>
  const toggles = document.querySelectorAll('.nav-toggle');
  toggles.forEach((toggle) => {
    const container = toggle.closest('.nav-container');
    if (!container) return;
    const list = container.querySelector('.nav-links');
    if (!list) return;

    const closeMenu = () => {
      list.setAttribute('data-open', 'false');
      toggle.setAttribute('aria-expanded', 'false');
      document.body.classList.remove('nav-open');
    };

    toggle.addEventListener('click', () => {
      const isOpen = list.getAttribute('data-open') === 'true';
      list.setAttribute('data-open', String(!isOpen));
      toggle.setAttribute('aria-expanded', String(!isOpen));
      document.body.classList.toggle('nav-open', !isOpen);
    });

    list.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 960) {
          closeMenu();
        }
      });
    });
  });
</script>
